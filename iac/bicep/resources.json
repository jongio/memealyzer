{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "basename": {
      "type": "string",
      "defaultValue": ""
    },
    "location": {
      "type": "string",
      "defaultValue": "westus2"
    },
    "failover_location": {
      "type": "string",
      "defaultValue": "eastus2"
    },
    "cli_user_id": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2019-06-01",
      "name": "[format('{0}storage', parameters('basename'))]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2017-04-18",
      "name": "[format('{0}fr', parameters('basename'))]",
      "location": "[parameters('location')]",
      "kind": "FormRecognizer",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[format('{0}fr', parameters('basename'))]"
      },
      "identity": {
        "type": "SystemAssigned"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2017-04-18",
      "name": "[format('{0}ta', parameters('basename'))]",
      "location": "[parameters('location')]",
      "kind": "TextAnalytics",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[format('{0}ta', parameters('basename'))]"
      },
      "identity": {
        "type": "SystemAssigned"
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "[format('{0}kv', parameters('basename'))]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "accessPolicies": [
          {
            "objectId": "[parameters('cli_user_id')]",
            "permissions": {
              "secrets": [
                "get",
                "set",
                "list",
                "delete"
              ]
            },
            "tenantId": "[subscription().tenantId]"
          },
          {
            "objectId": "[reference(resourceId('Microsoft.ContainerService/managedClusters', format('{0}aks', parameters('basename')))).identityProfile.kubeletidentity.objectId]",
            "permissions": {
              "secrets": [
                "get",
                "set",
                "list",
                "delete"
              ]
            },
            "tenantId": "[subscription().tenantId]"
          },
          {
            "objectId": "[reference(resourceId('Microsoft.ContainerService/managedClusters', format('{0}aks', parameters('basename'))), '2020-09-01', 'full').identity.principalId]",
            "permissions": {
              "secrets": [
                "get",
                "set",
                "list",
                "delete"
              ]
            },
            "tenantId": "[subscription().tenantId]"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerService/managedClusters', format('{0}aks', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[format('{0}/CosmosKey', format('{0}kv', parameters('basename')))]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', format('{0}cosmosaccount', parameters('basename'))), '2020-04-01').primaryMasterKey]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', format('{0}cosmosaccount', parameters('basename')))]",
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[format('{0}/StorageKey', format('{0}kv', parameters('basename')))]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename'))), '2019-06-01').keys[0].value]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))]",
        "[resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[format('{0}/SignalRConnectionString', format('{0}kv', parameters('basename')))]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.SignalRService/signalR', format('{0}signalr', parameters('basename'))), '2020-07-01-preview').primaryConnectionString]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))]",
        "[resourceId('Microsoft.SignalRService/signalR', format('{0}signalr', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[format('{0}/StorageConnectionString', format('{0}kv', parameters('basename')))]",
      "properties": {
        "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', format('{0}storage', parameters('basename')), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename'))), '2019-06-01').keys[0].value)]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))]",
        "[resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2019-09-01",
      "name": "[format('{0}/ServiceBusConnectionString', format('{0}kv', parameters('basename')))]",
      "properties": {
        "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', format('{0}sb', parameters('basename')), 'RootManageSharedAccessKey'), '2017-04-01').primaryConnectionString]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))]",
        "[resourceId('Microsoft.ServiceBus/namespaces', format('{0}sb', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2020-04-01",
      "name": "[format('{0}cosmosaccount', parameters('basename'))]",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard",
        "enableAutomaticFailover": false,
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session"
        },
        "locations": [
          {
            "failoverPriority": 1,
            "locationName": "[parameters('failover_location')]"
          },
          {
            "failoverPriority": 0,
            "locationName": "[parameters('location')]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
      "apiVersion": "2020-04-01",
      "name": "[format('{0}/memealyzer', format('{0}cosmosaccount', parameters('basename')))]",
      "properties": {
        "options": {
          "throughput": 400
        },
        "resource": {
          "id": "memealyzer"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', format('{0}cosmosaccount', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "apiVersion": "2020-04-01",
      "name": "[format('{0}/memealyzer/images', format('{0}cosmosaccount', parameters('basename')))]",
      "properties": {
        "options": {
          "throughput": 400
        },
        "resource": {
          "partitionKey": {
            "paths": [
              "/uid"
            ]
          },
          "id": "images",
          "uniqueKeyPolicy": {
            "uniqueKeys": [
              {
                "paths": [
                  "/uid"
                ]
              }
            ]
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', format('{0}cosmosaccount', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2020-09-01",
      "name": "[format('{0}aks', parameters('basename'))]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "kubernetesVersion": "1.19.0",
        "nodeResourceGroup": "[format('{0}aksnodes', parameters('basename'))]",
        "dnsPrefix": "[format('{0}aks', parameters('basename'))]",
        "agentPoolProfiles": [
          {
            "name": "default",
            "count": 1,
            "vmSize": "Standard_A2_v2",
            "mode": "System"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2015-05-01",
      "name": "[format('{0}ai', parameters('basename'))]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "type": "Microsoft.AppConfiguration/configurationStores",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}appconfig', parameters('basename'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
      "apiVersion": "2020-07-01-preview",
      "name": "[format('{0}/borderStyle', format('{0}appconfig', parameters('basename')))]",
      "properties": {
        "value": "solid"
      },
      "dependsOn": [
        "[resourceId('Microsoft.AppConfiguration/configurationStores', format('{0}appconfig', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.SignalRService/signalR",
      "apiVersion": "2020-07-01-preview",
      "name": "[format('{0}signalr', parameters('basename'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_S1",
        "capacity": 1
      },
      "properties": {
        "cors": {
          "allowedOrigins": [
            "*"
          ]
        },
        "features": [
          {
            "flag": "ServiceMode",
            "value": "Serverless"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}plan', parameters('basename'))]",
      "location": "[parameters('location')]",
      "sku": {
        "tier": "Standard",
        "size": "S1",
        "name": "S1"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[format('{0}function', parameters('basename'))]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', format('{0}plan', parameters('basename')))]",
        "siteConfig": {
          "alwaysOn": true,
          "cors": {
            "allowedOrigins": [
              "*"
            ],
            "supportCredentials": false
          },
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', format('{0}storage', parameters('basename')), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename'))), '2019-06-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', format('{0}storage', parameters('basename')), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename'))), '2019-06-01').keys[0].value)]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', format('{0}ai', parameters('basename')))).InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[format('InstrumentationKey={0}', reference(resourceId('Microsoft.Insights/components', format('{0}ai', parameters('basename')))).InstrumentationKey)]"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "dotnet"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "WEBSITES_ENABLE_APP_SERVICE_STORAGE",
              "value": "false"
            },
            {
              "name": "AZURE_KEYVAULT_ENDPOINT",
              "value": "[reference(resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))).vaultUri]"
            },
            {
              "name": "AZURE_CLIENT_SYNC_QUEUE_NAME",
              "value": "sync"
            },
            {
              "name": "AZURE_STORAGE_CONNECTION_STRING_SECRET_NAME",
              "value": "StorageConnectionString"
            },
            {
              "name": "AZURE_SIGNALR_CONNECTION_STRING_SECRET_NAME",
              "value": "SignalRConnectionString"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": ""
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', format('{0}kv', parameters('basename')))]",
        "[resourceId('Microsoft.Insights/components', format('{0}ai', parameters('basename')))]",
        "[resourceId('Microsoft.Web/serverfarms', format('{0}plan', parameters('basename')))]",
        "[resourceId('Microsoft.Storage/storageAccounts', format('{0}storage', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2019-12-01-preview",
      "name": "[format('{0}acr', parameters('basename'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "adminUserEnabled": true
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2017-04-01",
      "name": "[format('{0}sb', parameters('basename'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/queues",
      "apiVersion": "2017-04-01",
      "name": "[format('{0}/messages', format('{0}sb', parameters('basename')))]",
      "properties": {
        "defaultMessageTimeToLive": "PT30S"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', format('{0}sb', parameters('basename')))]"
      ]
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/queues",
      "apiVersion": "2017-04-01",
      "name": "[format('{0}/sync', format('{0}sb', parameters('basename')))]",
      "properties": {
        "defaultMessageTimeToLive": "PT30S"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', format('{0}sb', parameters('basename')))]"
      ]
    }
  ]
}